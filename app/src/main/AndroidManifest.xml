<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.codekamp.codekampconnect">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/codekamp3"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SaveContact" />
        <activity
            android:name=".ContactDetailActivity"
            android:label="Contacts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListContactActivity"
            android:label="@string/title_activity_list_contact"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UpdateContact" />
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActionActivity" />
        <activity android:name=".BatchActivity"></activity>
    </application>

</manifest>